<p style="color: green"><%= notice %></p>

<h1>All Flats</h1>

<div id="flats" class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <%= render flat %>
        <div class="card-body">
          <p>
            <%= link_to "View", flat_path(flat), class: "btn btn-primary mr-2" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning mr-2" %>
            <%= link_to "Delete", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New Flat", new_flat_path, class: "btn btn-success" %>
